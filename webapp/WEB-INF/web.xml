<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Define the display name for your web application -->
    <display-name>YourWebAppDisplayName</display-name>

    <!-- Define welcome files (default pages) -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>CustomerInsert</servlet-name>
        <servlet-class>com.customer.CustomerInsert</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerInsert</servlet-name>
        <url-pattern>/insert</url-pattern> <!-- Define the URL pattern for your servlet -->
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CustomerInsert</servlet-name>
        <url-pattern>/login</url-pattern> <!-- Define the URL pattern for your servlet -->
    </servlet-mapping>

    <!-- Additional Servlets and Mappings Go Here -->

</web-app>
